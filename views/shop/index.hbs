{{#each products}}
  <div class="row">
    {{#each this}}
      <div class="col-lg-4 col-md-6 mb-4">
        <div class="card h-100">
          <a href="details/{{this._id}}"><img class="card-img-top" src="{{this.imagePath}}" alt=""></a>
          <div class="card-body">
            <h4 class="card-title">
              <a href="#">{{this.title}}</a>
            </h4>
            <h5><span>&#8381;</span>{{this.price}}</h5>
            <p class="card-text">{{this.description}}</p>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{/each}}