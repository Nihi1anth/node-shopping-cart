<div class="row">
  <button type="button" class="btn btn-primary">Добавить товар</button>
</div>

{{#each tovar}}
<div class="row">
  {{#each this}}
  <div class="card admin-card" style="min-width: 940px;">
    <div class="row no-gutters">
      <div class="col-md-4">
        <img src="{{this.imagePath}}" class="card-img w-25" alt="..." >
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title">{{this.title}}</h5>
          <p class="card-text">{{this.description}}</p>
          <p class="card-text">{{this.price}}</p>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>
{{/each}}